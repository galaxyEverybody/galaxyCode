<script>
	<!--点击金额到金额输入框-->
	$(function(){
		//倒计时
		var loan_time = $('#loan_time_hid').html();
	    var minite = Math.floor((loan_time/60)%60);
	    var hour = Math.floor((loan_time/3600)%24);
	    var day = Math.floor((loan_time/3600)/24);
	            		
	    $('#loan_time_dis').html('<span style="color:red;font-size:24px;">'+day+'</span>&nbsp;天&nbsp;<span style="color:red;font-size:24px;">'+hour+'</span>&nbsp;时&nbsp;<span style="color:red;font-size:24px;">'+minite+'</span>&nbsp;分');
		
		$(".Ptable tr:even").css("background","#EDEBEC");
		
		//投资金额点击事件
		$(".bondinfo_num li").click(function(){
			var chargenum = $(this).text();
			if(chargenum == '全部'){
				$(".showhidnum").show();
				$(this).hide();
			}else{
				chargenum = chargenum.substring(0,chargenum.length-1);
				$(".recharge_input").val(chargenum);
			}
			
		});
	});
</script>
<script>
	$(function(){
		var number = 0;	
		var num = $("#gooddetailrateend").html();
		
		if(num.length>2){
			var place = num.indexOf(".");
			var firstnum = num.substr(0,place);
			var lastnum = num.substr(place);
			var auto = setInterval(autoadd,"100");
		}else{
			var autoone = setInterval(autoone,"100");
		}
		function autoone(){
			number++;
			$("#gooddetailrate").html(number);
			if(number == num){
				clearInterval(autoone);
			}
		}
		function autoadd(){
			number++;
			var numbers = number+lastnum;
			$("#gooddetailrate").html(numbers);
			if(number == firstnum){
				clearInterval(auto);
			}
		}
	});
</script>
<script>
 	function checkgoodsform()
 	{
 		var investnum = $("#investamount").val();
 		var goodsid = $("#hidgoodsid").val();
		
 		if(investnum == ''){
 			alert('请输入投资金额');
 			return false;
 		}else if(investnum%100 != 0){
 			alert('输入金额必须为100的倍数');
 			return false;
 		}else if(investnum > 50000){
 			alert('最大投资金额为5万');
 			return false;
 		}
 		if(goodsid == ''){
 			return false;
 		}
 		return true;
 	}
 </script>
