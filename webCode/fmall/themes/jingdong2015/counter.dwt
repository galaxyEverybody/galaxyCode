<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem --> {insert_scripts files='jd_category.js'}

<div class="w main">
	<div class="blank10"></div>
    <div style="width:100%;height:auto;margin-bottom:50px;">
		<div style="width:100%;height:60px;line-height:60px;background:#F7F7F7;background:url(images/tubiao.png) no-repeat 10px;"><span style="font-size:26px;font-weight:bold;float:left;margin-left:50px;">理财计算器</span></div>
		<div style="width:90%;height:360px;">
			<form action="#" post="" onsubmit="return false">
			<table style="width:100%;height:300px;margin-top:30px;font-size:16px;font-weight:bold;" border="0">
				<tr>
					<td style="width:120px;text-align:center;">出借金额:</td>
					<td style="width:440px"><div style="width:390px;height:35px;border:1px solid #ddd;float:left;"><input type="text" name="countersum" id="countersum" style="width:360px;height:30px;float:left;border:none;outline:none;font-size:14px;"><span style="float:left;line-height:35px;height:35px;margin-left:5px;">元</span></div></td>
					<td style="width:120px;text-align:center;">年化利率:</td>
					<td style="width:440px"><div style="width:390px;height:35px;border:1px solid #ddd;float:left;"><input type="text" name="counterrate" id="counterrate" style="width:360px;height:30px;float:left;border:none;outline:none;font-size:14px;"><span style="float:left;line-height:35px;height:35px;margin-left:5px;">%</span></div></td>
				</tr>
				<tr>
					<td style="width:120px;text-align:center;">借款期限:</td>
					<td style="width:440px"><div style="width:390px;height:35px;border:1px solid #ddd;float:left;"><input type="text" name="countertime" id="countertime" style="width:360px;height:30px;float:left;border:none;outline:none;font-size:14px;"><span style="float:left;line-height:35px;height:35px;margin-left:5px;">月</span></div></td>
					<td style="width:120px;text-align:center;">还款方式:</td>
					<td style="width:440px">
						<select name = "countertype" id="countertype" style="width:390px;height:35px;">
							<option value=1>按月等额本息</option>
							<option value=2>按月还息到期还本</option>
							<option value=3>到期还本息</option>
						</select>
					</td>
				</tr>
				<tr>
					<td></td><td><div style="height:25px;line-height:25px;font-size:20px;"><label><input style="width:20px;height:20px;border:#0033CC solid 2px;border:1px solid red;" type="checkbox" checked="checked" /></label>显示还款时间表</div></td><td></td><td></td>
				</tr>
				<tr>
					<td colspan="4" align="center">
					<input onclick="counterajax();" style="margin-top:20px;width:180px;height:40px;background:#FF8201;border:0px solid #FF8201;color:#fff;font-weight:bold;font-size:18px;border-radius:3px;" type="submit" value="开始计算"/>
					<input style="margin-top:20px;margin-left:20px;width:180px;height:40px;background:#ADABAC;border:1px solid #ADABAC;color:#fff;font-weight:bold;font-size:18px;border-radius:3px;" type="reset" value="重置"/>
					</td>
				</tr>
			</table>
			</form>
		</div>
		<div style="width:100%;height:40px;line-height:40px;"><div style="width:6px;height:40px;background:#FF500B;float:left;"></div><span style="font-size:26px;font-weight:bold;float:left;">还款时间表</span></div>
		<div style="width:100%;height:auto;">
			<table width="100%" style="margin-bottom:50px;">
				<tr style="height:40px;background:#F7F7F7;"><th>月份</th><th>月收本息</th><th>月收本金</th><th>月收利息</th><th>待收本息</th></tr>
			</table>
		</div>
	</div>
</div>

<!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem --> <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
<script>
	function counterajax(){
		var csum = $("#countersum").val();
		var crate = $("#counterrate").val();
		var ctime = $("#countertime").val();
		var ctype = $("#countertype").val();

		Ajax.call( 'counter.php?act=countercount','csum=' + csum + '&crate=' + crate + '&ctime=' + ctime + '&ctype=' + ctype, counter_callback , 'GET', 'TEXT', true, true );
	}
	function counter_callback(result){
		alert(result);
	}
</script>
</body>
</html>